#!/usr/bin/env bash

set -eou pipefail

show_help() {
    cat << 'EOF'
Usage: uuid [COUNT]
  Generate COUNT lowercase UUIDs. Defaults to 1.

Examples:
  uuid      # Generate 1 UUID
  uuid 5    # Generate 5 UUIDs
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
    show_help
    exit 0
fi

# Check if an argument is provided
if [ $# -eq 0 ]; then
  count=1
else
  count=$1
fi

# Generate N UUIDs
for ((i=1; i<=count; i++)); do
  uuidgen | tr '[:upper:]' '[:lower:]'
done
