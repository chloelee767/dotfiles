# https://i3wm.org/i3status/manpage.html 

general {
    colors = true
    interval = 5
}

order += "disk /"
order += "cpu_temperature 1" # hard drive temp

order += "ipv6" # ip address
order += "wireless wlp4s0"
order += "ethernet enp2s0"

order += "memory"

order += "cpu_usage"
order += "cpu_temperature 0" # cpu temp

order += "battery all"

order += "volume master"

order += "time"

wireless wlp4s0 {
    format_up = "直 %quality at %essid"
    format_down = "直 down"
}

ethernet enp2s0 {
    format_up = "  %speed"
    format_down = "  down"
}

cpu_usage {
    format = "CPU %usage"
    separator = false
    separator_block_width = 10
}

cpu_temperature 0 {
    format = "%degrees ℃"
    path = "/sys/class/hwmon/hwmon3/temp1_input" # CPU temp
}


battery all {
    format = "%status %percentage"
    format_down = "No battery"
    status_chr = ""
    status_bat = ""
    status_unk = " ?"
    status_full = "FULL"
    low_threshold = 25
    integer_battery_capacity = true
    # path = "/sys/class/power_supply/BAT0/uevent"
}

memory {
    format = "MEM %used / %total"
}

volume master {
    format = "墳  %volume"
    format_muted = "墳  muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

disk "/" {
    format = "  %free"
    separator = false
    separator_block_width = 10
}

cpu_temperature 1 {
    format = "%degrees ℃"
    path = "/sys/class/hwmon/hwmon0/temp1_input" # hard drive temp
}

time {
    format = "%a %d %b, %H:%M:%S"
}
