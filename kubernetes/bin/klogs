#!/usr/bin/env bash

set -eou pipefail

show_help() {
    cat << 'EOF'
Usage: klogs [-c CONTEXT] [-n NAMESPACE] [-f FILTER] [-a] [--dry-run] [QUERY]
  Tail pod logs matching QUERY.

Options:
  -a, --all              Get all logs (not just tail -f last 50)
  -f, --filter FILTER    Filter logs (default: exclude healthchecks)
  -c, --context CONTEXT  Kubectl context
  -n, --namespace NS     Namespace
  --dry-run              Print command instead of executing

Examples:
  klogs myapp                    # Tail last 50 lines of myapp logs
  klogs -a myapp > logs.txt      # Get all logs to file
  klogs -f 'grep ERROR' myapp    # Filter for errors
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
    show_help
    exit 0
fi

DRY_RUN=false
ALL=false
FILTER='grep -iv -E "(healthcheck|health/check)"'
CONTEXT=""
NAMESPACE=""

while [[ $# -gt 0 ]]
do
    key="$1"
    case $key in
        --dry-run)
            DRY_RUN=true
            shift
            ;;
        -a|--all)
            ALL=true
            shift
            ;;
        -f|--filter)
            FILTER="$2"
            shift
            shift
            ;;
        -c|--context)
            CONTEXT="$2"
            shift
            shift
            ;;
        -n|--namespace)
            NAMESPACE="$2"
            shift
            shift
            ;;
        *)
            break
            ;;
    esac
done

QUERY="$@"

if [[ -z "$CONTEXT" ]]; then
    CONTEXT="$(kubectl config current-context)"
fi

if [[ -z "$NAMESPACE" ]]; then
    NAMESPACE="$(kcurrentnamespace $CONTEXT)"
fi

echo "Context:" $CONTEXT "  Namespace:" $NAMESPACE

POD="$(kpod -c $CONTEXT -n $NAMESPACE $QUERY)"
CONTAINER=$(kcontainer --pod $POD --context $CONTEXT --namespace $NAMESPACE)


CMD="kubectl logs "$POD" --container "$CONTAINER" --context "$CONTEXT" -n "$NAMESPACE""

if ! $ALL; then
    CMD="$CMD --tail=50 -f"

    # only apply filter if we are following logs
    if [[ -n "$FILTER" ]]; then
        CMD="$CMD | $FILTER"
    fi
fi

if $DRY_RUN; then
    echo "$CMD"
    echo "$CMD" | pbcopy
else
    set -x
    bash -c "$CMD"
fi
