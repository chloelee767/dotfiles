#!/usr/bin/env bash

set -euo pipefail

show_help() {
    cat << 'EOF'
Usage: catlines START END FILE
  Print lines START to END (inclusive) from FILE.

Examples:
  catlines 10 20 file.txt    # Print lines 10-20
  catlines 1 5 log.txt       # Print first 5 lines
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
    show_help
    exit 0
fi

if [ $# -ne 3 ]; then
    show_help
    exit 1
fi

X=$1
Y=$2
FILE="$3"

tail -n "+$X" "$FILE" | head -n "$((Y-X+1))"
