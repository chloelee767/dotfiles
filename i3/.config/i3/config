# kill focused window
bindsym $mod+Shift+period kill

# split orientation
bindsym $mod+semicolon split h;exec notify-send 'tile horizontally'
bindsym $mod+apostrophe split v;exec notify-send 'tile vertically'

# enter fullscreen mode for the focused container
bindsym $mod+u fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+z layout stacking
bindsym $mod+c layout tabbed
bindsym $mod+x layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+o floating toggle

# change focus between tiling / floating windows
bindsym $mod+o focus mode_toggle

# focus the parent container
bindsym $mod+p focus parent

# focus the child container
bindsym $mod+Shift+p focus child

# toggle sticky floating window
bindsym $mod+i sticky toggle; exec notify-send 'toggle sticky window'

bindsym $mod+Ctrl+v move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+v scratchpad show

