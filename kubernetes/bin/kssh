#!/usr/bin/env bash
set -eou pipefail

show_help() {
    cat << 'EOF'
Usage: kssh [-c CONTEXT] [-n NAMESPACE] [QUERY]
  SSH-like access (bash shell) to pod matching QUERY.

Options:
  -c, --context CONTEXT     Kubectl context
  -n, --namespace NAMESPACE Namespace

Examples:
  kssh myapp    # Open bash in myapp pod
  kssh web      # Open bash in web pod
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
    show_help
    exit 0
fi

CONTEXT=""
NAMESPACE=""

while [[ $# -gt 0 ]]
do
    key="$1"
    case $key in
        -c|--context)
            CONTEXT="$2"
            shift
            shift
            ;;
        -n|--namespace)
            NAMESPACE="$2"
            shift
            shift
            ;;
        *)
            break
            ;;
    esac
done

query="$@"

if [[ -z "$CONTEXT" ]]; then
    CONTEXT="$(kubectl config current-context)"
fi

if [[ -z "$NAMESPACE" ]]; then
    NAMESPACE="$(kcurrentnamespace $CONTEXT)"
fi

echo "Context:" $CONTEXT "  Namespace:" $NAMESPACE

POD="$(kpod -c $CONTEXT -n $NAMESPACE $query)"
CONTAINER=$(kcontainer --pod $POD --context $CONTEXT --namespace $NAMESPACE)

set -x
kubectl exec -it "$POD" --container "$CONTAINER" --context "$CONTEXT" -n "$NAMESPACE" -- /bin/bash
