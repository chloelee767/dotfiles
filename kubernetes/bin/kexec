#!/usr/bin/env bash

set -eou pipefail

show_help() {
    cat << 'EOF'
Usage: kexec [-c CONTEXT] [-n NAMESPACE] --cmd CMD [QUERY]
  Execute command in pod matching QUERY.

Options:
  --cmd, --bash-cmd CMD     Command to run in /bin/bash -c
  --raw-cmd CMD             Raw command (no bash wrapper)
  -c, --context CONTEXT     Kubectl context
  -n, --namespace NAMESPACE Namespace

Examples:
  kexec --cmd 'cat /etc/hosts' myapp    # Run command in myapp pod
  kexec --cmd 'ls -la' web              # List files in web pod
EOF
}

CONTEXT=""
NAMESPACE=""
POD_CMD=""
BASH_CMD=""

while [[ $# -gt 0 ]]
do
    key="$1"
    case $key in
        -h|--help)
            show_help
            exit 0
            ;;
        -c|--context)
            CONTEXT="$2"
            shift
            shift
            ;;
        -n|--namespace)
            NAMESPACE="$2"
            shift
            shift
            ;;
        --raw-cmd)
            POD_CMD="$2"
            shift
            shift
            ;;
        --cmd|--bash-cmd)
            BASH_CMD="$2"
            shift
            shift
            ;;
        *)
            break
            ;;
    esac
done

query="$@"

if [[ -n "$BASH_CMD" ]]; then
    POD_CMD="/bin/bash -c '$BASH_CMD'"
fi

if [[ -z "$POD_CMD" ]]; then
    echo "Please provide the command to run in the pod"
    show_help
    exit 1
fi

if [[ -z "$CONTEXT" ]]; then
    CONTEXT="$(kubectl config current-context)"
fi

if [[ -z "$NAMESPACE" ]]; then
    NAMESPACE="$(kcurrentnamespace $CONTEXT)"
fi

echo "Context:" $CONTEXT "  Namespace:" $NAMESPACE

POD="$(kpod -c $CONTEXT -n $NAMESPACE $query)"
CONTAINER=$(kcontainer --pod $POD --context $CONTEXT --namespace $NAMESPACE)

CMD="kubectl exec $POD --container $CONTAINER --context $CONTEXT -n $NAMESPACE -- $POD_CMD"

set -x
bash -c "$CMD"
