#!/usr/bin/env bash

# Tail the logs of a pod.
# If the --dry-run flag is passed, the command is printed and copied to the clipboard instead.

set -eou pipefail

DRY_RUN=false
ALL=false
CONTEXT=""
NAMESPACE=""

while [[ $# -gt 0 ]]
do
    key="$1"
    case $key in
        --dry-run)
            DRY_RUN=true
            shift
            ;;
        --all|-a)
            ALL=true
            shift
            ;;
        -c|--context)
            CONTEXT="$2"
            shift
            shift
            ;;
        -n|--namespace)
            NAMESPACE="$2"
            shift
            shift
            ;;
        *)
            break
            ;;
    esac
done

QUERY="$@"

if [[ -z "$CONTEXT" ]]; then
    CONTEXT="$(kubectl config current-context)"
fi

if [[ -z "$NAMESPACE" ]]; then
    NAMESPACE="$(kcurrentnamespace $CONTEXT)"
fi

echo "Context:" $CONTEXT "  Namespace:" $NAMESPACE

POD="$(kpod -c $CONTEXT -n $NAMESPACE $QUERY)"
CONTAINER=$(kcontainer --pod $POD --context $CONTEXT --namespace $NAMESPACE)


CMD="kubectl logs "$POD" --container "$CONTAINER" --context "$CONTEXT" -n "$NAMESPACE" --tail=50 -f"
FILTER="cat"
if ! $ALL; then
    FILTER="grep -iv healthcheck"
fi
# TODO support dry run + filter?
if $DRY_RUN; then
    echo "$CMD"
    echo "$CMD" | pbcopy
else
    set -x
    exec $CMD | $FILTER
fi
