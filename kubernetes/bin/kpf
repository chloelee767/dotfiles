#!/usr/bin/env bash
set -eou pipefail

show_help() {
    cat << 'EOF'
Usage: kpf [-c CONTEXT] [-n NAMESPACE] [-p PORT] [-l LOCAL_PORT] [-ip] [QUERY]
  Port-forward to pod matching QUERY.

Options:
  -p, --port PORT           Remote port name/number (default: grpc)
  -l, --local-port PORT     Local port (default: same as remote)
  -ip, --interactive-port   Select port interactively with fzf
  -c, --context CONTEXT     Kubectl context
  -n, --namespace NAMESPACE Namespace

Examples:
  kpf myapp                 # Forward grpc port from myapp pod
  kpf -p 8080 myapp         # Forward port 8080
  kpf -ip myapp             # Select port interactively
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
    show_help
    exit 0
fi

PORT="grpc"
LOCAL_PORT=""
SELECT_PORT=false
CONTEXT=""
NAMESPACE=""

while [[ $# -gt 0 ]]
do
    key="$1"
    case $key in
        -p|--port)
            PORT="$2"
            shift
            shift
            ;;
        -ip|--interactive-port)
            SELECT_PORT=true
            shift
            ;;
        -l|--local-port)
            LOCAL_PORT="$2"
            shift
            shift
            ;;
        -c|--context)
            CONTEXT="$2"
            shift
            shift
            ;;
        -n|--namespace)
            NAMESPACE="$2"
            shift
            shift
            ;;
        *)
            break
            ;;
    esac
done

query="$@"

if [[ -z "$CONTEXT" ]]; then
    CONTEXT="$(kubectl config current-context)"
fi

if [[ -z "$NAMESPACE" ]]; then
    NAMESPACE="$(kcurrentnamespace $CONTEXT)"
fi

echo "Context:" $CONTEXT "  Namespace:" $NAMESPACE

POD="$(kpod --context $CONTEXT -n $NAMESPACE $query)"

if $SELECT_PORT; then
    PORT=$(kubectl get pod ${POD} --context $CONTEXT -n $NAMESPACE -o go-template='{{range.spec.containers}}{{range.ports}}{{.name}}{{" "}}{{.containerPort}}{{"\n"}}{{end}}{{end}}' | fzf -1 --prompt 'port>' | awk '{ print $1 }')
fi

set -x # print commands executed
if [[ -z "$LOCAL_PORT" ]]; then
    kubectl port-forward "$POD" "$PORT" --context $CONTEXT -n $NAMESPACE
else
    kubectl port-forward "$POD" "$LOCAL_PORT":"$PORT" --context $CONTEXT -n $NAMESPACE
fi
