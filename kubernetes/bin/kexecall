#!/usr/bin/env bash
set -eou pipefail

show_help() {
    cat << 'EOF'
Usage: kexecall [-s SECONDS] [--dry-run] CMD
  Execute CMD in all running pods (excludes datareplicator, log-svc-agent, istio-proxy).

Options:
  -s, --sleep SECONDS  Sleep between executions
  --dry-run            Print pods/containers without executing

Examples:
  kexecall 'ls /app'              # Run ls in all pods
  kexecall -s 2 'restart-service' # Run with 2s delay between pods
EOF
}

DRY_RUN=false
SLEEP_TIME=0
while [[ $# -gt 1 ]]
do
    key="$1"
    case $key in
        -h|--help)
            show_help
            exit 0
            ;;
        -s|--sleep)
            SLEEP_TIME="$2"
            shift
            shift
            ;;
        --dry-run)
            DRY_RUN=true
            shift
            ;;
    esac
done

CMD="$1"

echo "COMMAND:" "$CMD"
sleep 1

PODS="$(kubectl get pods | tail -n +2 | grep -i run | awk '{print $1}' | grep --invert-match -E "datareplicator" | sort)"
for P in $PODS; do
    CONTAINER=$(kubectl get pod $P -o jsonpath="{.spec.containers[*].name}" | tr -s '[[:space:]]' '\n' | grep --invert-match -E "log-svc-agent|istio-proxy")
    NUM_C=$(echo $CONTAINER | wc -l)
    echo "pod:" "$P" "container:" "$CONTAINER"
    if $DRY_RUN; then
        continue
    fi

    if [[ $NUM_C -eq 1 ]]; then
        kubectl exec "$P" --container "$CONTAINER" -- /bin/bash -c "$CMD"
    else
        echo "FAILED: >1 container"
    fi

    printf "\n\n"

    if [[ $SLEEP_TIME -gt 0 ]]; then
        sleep $SLEEP_TIME
    fi
done

# TODO:
# - filtering out certain pods / containers (eg. workers)
# - make this work kexecall 'kill -1 $(supervisorctl status svc | awk '{ print $4 }' | sed 's/,//')'
