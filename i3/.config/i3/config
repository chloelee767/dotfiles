# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Ctrl+h resize shrink width 2 px or 2 ppt
        bindsym Ctrl+j resize grow height 2 px or 2 ppt
        bindsym Ctrl+k resize shrink height 2 px or 2 ppt
        bindsym Ctrl+l resize grow width 2 px or 2 ppt
        bindsym Ctrl+Left resize shrink width 2 px or 2 ppt
        bindsym Ctrl+Down resize grow height 2 px or 2 ppt
        bindsym Ctrl+Up resize shrink height 2 px or 2 ppt
        bindsym Ctrl+Right resize grow width 2 px or 2 ppt

        bindsym Shift+h resize shrink width 30 px or 30 ppt
        bindsym Shift+j resize grow height 30 px or 30 ppt
        bindsym Shift+k resize shrink height 30 px or 30 ppt
        bindsym Shift+l resize grow width 30 px or 30 ppt
        bindsym Shift+Left resize shrink width 30 px or 30 ppt
        bindsym Shift+Down resize grow height 30 px or 30 ppt
        bindsym Shift+Up resize shrink height 30 px or 30 ppt
        bindsym Shift+Right resize grow width 30 px or 30 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+n mode "default"
}

bindsym $mod+n mode "resize"

mode "move" {
        # These bindings trigger as soon as you enter the move mode

        bindsym h exec --no-startup-id move-window.sh -40 0
        bindsym j exec --no-startup-id move-window.sh 0 40
        bindsym k exec --no-startup-id move-window.sh 0 -40
        bindsym l exec --no-startup-id move-window.sh 40 0
        bindsym Left exec --no-startup-id move-window.sh -40 0
        bindsym Down exec --no-startup-id move-window.sh 0 40
        bindsym Up exec --no-startup-id move-window.sh 0 -40
        bindsym Right exec --no-startup-id move-window.sh 40 0

        # finer control
        bindsym Ctrl+h exec --no-startup-id move-window.sh -2 0
        bindsym Ctrl+j exec --no-startup-id move-window.sh 0 2
        bindsym Ctrl+k exec --no-startup-id move-window.sh 0 -2
        bindsym Ctrl+l exec --no-startup-id move-window.sh 2 0
        bindsym Ctrl+Left exec --no-startup-id move-window.sh -2 0
        bindsym Ctrl+Down exec --no-startup-id move-window.sh 0 2
        bindsym Ctrl+Up exec --no-startup-id move-window.sh 0 -2
        bindsym Ctrl+Right exec --no-startup-id move-window.sh 2 0

        bindsym Shift+h exec --no-startup-id move-window.sh -10 0
        bindsym Shift+j exec --no-startup-id move-window.sh 0 10
        bindsym Shift+k exec --no-startup-id move-window.sh 0 -10
        bindsym Shift+l exec --no-startup-id move-window.sh 10 0
        bindsym Shift+Left exec --no-startup-id move-window.sh -10 0
        bindsym Shift+Down exec --no-startup-id move-window.sh 0 10
        bindsym Shift+Up exec --no-startup-id move-window.sh 0 -10
        bindsym Shift+Right exec --no-startup-id move-window.sh 10 0

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}

bindsym $mod+m mode "move"

# Set shut down, restart and locking features
bindsym $mod+BackSpace mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (Shift+r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym Shift+r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


bindsym $mod+Escape mode "$mode_window_actions"
set $mode_window_actions (`)close | toggle (1)fullscreen (2)sticky (3)floating
mode "$mode_window_actions" {
    bindsym grave kill, mode "default"
    bindsym 1 fullscreen toggle, mode "default"
    bindsym 2 sticky toggle, mode "default"
    bindsym 3 floating toggle, mode "default"

    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

