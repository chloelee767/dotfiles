#!/usr/bin/env bash
set -eou pipefail

ALL=false
CONTEXT=""
NAMESPACE=""

while [[ $# -gt 0 ]]
do
    key="$1"
    case $key in
        --all | -a)
            ALL=true
            shift
            ;;
        -c|--context)
            CONTEXT="$2"
            shift
            shift
            ;;
        -n|--namespace)
            NAMESPACE="$2"
            shift
            shift
            ;;
        *)
            break
            ;;
    esac
done

query="$@"

if [[ -z "$CONTEXT" ]]; then
    CONTEXT="$(kubectl config current-context)"
fi

if [[ -z "$NAMESPACE" ]]; then
    NAMESPACE="$(kcurrentnamespace $CONTEXT)"
fi

echo "Context:" $CONTEXT "  Namespace:" $NAMESPACE

POD="$(kpod -c $CONTEXT -n $NAMESPACE $query)"
CONTAINER=$(kcontainer --pod $POD --context $CONTEXT --namespace $NAMESPACE)

CMD="kubectl exec -it "$POD" --container "$CONTAINER" --context "$CONTEXT" -n "$NAMESPACE" -- /bin/bash logs"
FILTER="cat"
if ! $ALL; then
    FILTER="grep -iv healthcheck"
fi

set -x
exec $CMD | $FILTER
